<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head> <%- include ('./partials/head.ejs') %> </head>
    <body>
    <nav>  <%- include('./partials/nav.ejs') %>   </nav>

    <table class="indexTable">
        <th class="title">All Methods</th>
        <tr class="headder">
            <th>      </th>
            <th>Name: </th>
            <th>      </th>
            <th>Did It Work?</th>
            <th>My Rating </th>
            <th>Results: </th>
            <th>Personal notes: </th>
        </tr>
        <tr>
        <%for (let i = 0; i < practices.length; i++) { %>
            <td><button type="button" name="button"
                onclick="window.location.href='/home/index/<%=practices[i].id%>/edit'"
                >Edit</button></td>

            <td id="name"><a href="/home/index/<%=practices[i].id%>/show"><%=practices[i].name%></a></td>

            <td>
                <form class="tableForm" action="/home/index/<%=practices[i].id%>?_method=DELETE" method="POST">
                    <button id="delete">Remove</button>
                </form>
            </td>
            <td><%=practices[i].didItWork%></td>
            <td><%=practices[i].myRating%></td>
            <td><%=practices[i].results%></td>
            <td><%=practices[i].notes%></td>
        </tr>
        <%}%>
    </table>

    <button class="sub" type="button" onclick="window.location.href='/home/index/new'">Add A New System</button>

    </body>
</html>
